<Page x:Class="KR2_Saifutdinov.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Saifutdinov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="TBPassword"/>
            <Button x:Name="Blogin"
                    Content="Login"
                    Click="Blogin_Click"/>
            <Button x:Name="BRegistrationNewSotrudnik"
                    Content="RegistrationNewSotrudnik"
                    Click="BRegistrationNewSotrudnik_Click"/>
        </StackPanel>
    </Grid>
</Page>
